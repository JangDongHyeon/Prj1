<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="board">
	<select id="boardSelect" resultType="com.spring.board.dvo.BoardVO">
	<include refid="pageHeader" />
	 SELECT 
	  bno,
	  bid,
	  content,
	  subject,
	  indate,
	  updatedate,
	  cnt,
	  love
	FROM
	 board_a
	<include refid="search"/>
		ORDER BY bno DESC
		<include refid="pageFooter"></include>
	</select>
	
	<select id="boardPageCount" resultType="int">
	 SELECT
	  COUNT(bid)
	 FROM
	  board_a
	  <include refid="search"/>
	</select>
	
	<insert id="boardInsert">
		INSERT INTO (bno,bid,content,subject) VALUES(board_seq_bno,#{bid},#{content},#{subject})
	
	</insert>
	
	<update id="boardUpdate">
	 UPDATE  board_a
	 SET
	  content=#{content},
	  subject=#{subject}
	WHERE 
	bno=#{bno}
	
	</update>
	
	<select id="boardDetail" resultType="com.spring.board.dvo.BoardVO">
	  SELECT 
	  bno,
	  bid,
	  content,
	  subject,
	  indate,
	  updatedate,
	  cnt,
	  love
	FROM
	 board_a
	WHERE
	 bno=#{bno}
	</select>
	
	<update id="boardCntUp">
	 UPDATE board_a
	 SET
	  cnt=cnt+1
	 WHERE 
		bno=#{bno}
	</update>

	<delete id="boardDelete">
	 DELETE FROM board_a
	 WHERE bno=#{bno}
	
	</delete>
	
	<sql id="pageHeader">
		SELECT * FROM(
		SELECT ROWNUM AS rn,A.*FROM(


	</sql>
	<sql id="pageFooter">
		)A
		)WHERE rn BETWEEN #{startPage} AND
		#{endPage}

	</sql>
	<sql id="search">
		<if test="search==''">
		WHERE
			  subject LIKE '%'||#{keyword}||'%'
		  OR content LIKE '%'||#{keyword}||'%'
		  OR bid LIKE '%'||#{keyword}||'%'
		</if>
		<if test="search=='b_al'.toString()">
		WHERE
		  subject LIKE '%'||#{keyword}||'%'
		  OR content LIKE '%'||#{keyword}||'%'
		  OR bid LIKE '%'||#{keyword}||'%'
		</if>
		<if test="search=='b_ti'.toString()">
		WHERE
		 	subject LIKE '%'||#{keyword}||'%'
		</if>
		<if test="search=='b_con'.toString()">
		WHERE
		 	content LIKE '%'||#{keyword}||'%'
		</if>
		<if test="search=='b_i'.toString()">
		WHERE
		 	bid LIKE '%'||#{keyword}||'%'
		</if>
		
		 	
	</sql>

</mapper>
  